<Window x:Class="TesWPFtApp.DataGridView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesWPFtApp"
        mc:Ignorable="d"
        Title="DataGridView" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding LstPersonas}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Nombre Completo"/>
                <DataGridTextColumn Binding="{Binding Path=FechaNacimiento}" Header="Fecha de Nacimiento"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BtnAddPerson" Content="Añadir Persona" HorizontalAlignment="Center" VerticalAlignment="Top" Width="164" Margin="0,365,0,0" Click="BtnAddPerson_Click"/>
    </Grid>
</Window>
