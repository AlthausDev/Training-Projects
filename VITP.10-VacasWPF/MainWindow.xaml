<Window x:Class="VacasWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacasWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="DgVacas" ItemsSource="{Binding ListVacas}" IsReadOnly="False" AutoGenerateColumns="True" Margin="0,0,0,86" CellEditEnding="DgVacas_CellEditEnding"/>
        <Button Name="BtnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="156,379,0,0" VerticalAlignment="Top" Click="BtnEliminar_Click"/>
        <Button Name="btnNueva" Content="Nueva vaca" HorizontalAlignment="Left" Margin="64,379,0,0" VerticalAlignment="Top" Click="btnNueva_Click"/>
    </Grid>
</Window>
