<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecase.diceRoll.DiceFragment">

    <ImageView
        android:id="@+id/dado1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/dado1"
        android:src="@drawable/dice_1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dado2"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1"/>

    <ImageView
        android:id="@+id/dado2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/dado2"
        android:src="@drawable/dice_1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dado1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>